# ============================================================================
# Security Configuration for Page View Counter API
# ============================================================================

# Protect sensitive configuration files from direct web access
<FilesMatch "^(db-config)\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Allow access to public API endpoints
<FilesMatch "^(count|admin)\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Protect against common attacks
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Force HTTPS (uncomment if you want to enforce SSL)
# <IfModule mod_rewrite.c>
#     RewriteEngine On
#     RewriteCond %{HTTPS} off
#     RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# </IfModule>

# Disable execution of scripts in this directory (except PHP)
<FilesMatch "\.(sh|py|pl|cgi|exe)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Prevent access to hidden files (like .git, .htaccess, etc.)
<FilesMatch "^\.">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Prevent access to SQL files
<FilesMatch "\.sql$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
